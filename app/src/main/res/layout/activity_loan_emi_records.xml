<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bankLoan.LoanEmiRecords">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Loan Name"
    android:id="@+id/emiRecordLoanName"
    android:textSize="30sp"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:background="#00C853"
    android:paddingStart="20dp">

</TextView>
    <LinearLayout
        android:layout_width="match_parent"

        android:id="@+id/emiDetailLl"
        android:layout_below="@id/emiRecordLoanName"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"


            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:id="@+id/emiLinearLayout"

                android:layout_height="35dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="10sp"


                    android:gravity="center"
                    android:paddingEnd="6dp"
                    android:textStyle="bold"
                    android:id="@+id/emiDispSr"
                    android:text="NO"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:layout_weight="8">

                </TextView>
                <TextView
                    android:id="@+id/emiDispDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:gravity="center"

                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/emiDispPremium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:gravity="center"

                    android:text="EMI"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/emiDispIntrest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:gravity="center"

                    android:text="Intrest"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/emiDispPrinciple"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:gravity="center"

                    android:text="Principle"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>



                <TextView
                    android:id="@+id/emiDispBalance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:background="@drawable/yene_dene_tv_bck"
                    android:gravity="center"
                    android:text="Balance"
                    android:textColor="#FA6868"
                    android:textSize="10sp"
                    android:textStyle="bold">

                </TextView>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_below="@id/emiDetailLl"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="90"
        android:id="@+id/emiRecordRecyclerView"

        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Back"
            android:id="@+id/emiRecordBackBtn"

            android:background="@drawable/dark_green_btn"
            app:backgroundTint="@null"



            >

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>