<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="100"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="100"
        android:weightSum="100"

        android:id="@+id/dispSharesSrno"

        android:layout_height="35dp">


        <TextView
            android:id="@+id/dispShareSrno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"

            android:text="ABCABC"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dispSharesDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"
            android:text="ABCABC"
            android:textColor="#2FAFFD"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dispSharesAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"
            android:text="ABCABC"
            android:textColor="#FA6868"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>



    </LinearLayout>


</LinearLayout>