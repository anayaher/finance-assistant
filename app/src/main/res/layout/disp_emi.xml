<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:id="@+id/emiLinearLayout"

        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="10sp"


            android:gravity="center"
            android:paddingEnd="6dp"
            android:textStyle="bold"
            android:id="@+id/emiDispSr"
            android:text="ABCABC"
            android:background="@drawable/yene_dene_tv_bck"
            android:layout_weight="8">

        </TextView>
        <TextView
            android:id="@+id/emiDispDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"

            android:text="ABCABC"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/emiDispPremium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"

            android:text="ABCABC"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/emiDispIntrest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"

            android:text="ABCABC"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/emiDispPrinciple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"

            android:text="ABCABC"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>



        <TextView
            android:id="@+id/emiDispBalance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="@drawable/yene_dene_tv_bck"
            android:gravity="center"
            android:text="ABCABC"
            android:textColor="#FA6868"
            android:textSize="10sp"
            android:textStyle="bold">

        </TextView>



    </LinearLayout>


</LinearLayout>