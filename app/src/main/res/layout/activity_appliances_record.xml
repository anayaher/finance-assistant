<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:textAlignment="viewStart"
    tools:context=".BankAccountRecords">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:id="@+id/bankMainLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter Appliance Details"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILitemName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/bankMainLL"
            android:layout_marginTop="20dp"


            android:layout_weight="70"

            android:hint="Item Name"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ApplianceitemNameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:imeOptions="actionDone"




                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILprize"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/TILitemName"


            android:layout_weight="70"

            android:hint="Prize"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/AcademicPrizeTv"
                android:layout_width="match_parent"
                android:inputType="number"
                android:imeOptions="actionDone"

                android:layout_height="match_parent"

                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILshop"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TILprize"


            android:layout_weight="70"

            android:hint="Shop"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            android:layout_marginBottom="10dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/ApplianceShopNameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIlwanted"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TILshop"


            android:layout_weight="70"

            android:hint="Date Bought"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            android:layout_marginBottom="10dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/ApplianceDateTIL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILwarrantyDuration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TIlwanted"


            android:layout_weight="70"

            android:hint="Warranty Duration"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            android:layout_marginBottom="10dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/ApplianceWarrantyDurationTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILwarrantyExpiry"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TILwarrantyDuration"


            android:layout_weight="70"

            android:hint="Expiry Date"
            android:padding="0dp"
            android:textColorHint="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"


            app:boxCornerRadiusTopStart="8dp"


            app:boxStrokeColor="@color/teal_200"


            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/ApplianceWarrantyExpiryTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAlignment="viewStart"

                android:textColor="#000000"

                android:textSize="18sp"


                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TILwarrantyExpiry"

            android:layout_marginTop="50dp">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/AppliacneRecordBackbtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"

                android:layout_marginBottom="5dp"
                android:layout_weight="33"
                android:background="@drawable/red_btn"

                android:text="Back"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@null"

                app:iconGravity="textStart">


            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/ApplianceRecordSaveBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"

                android:layout_marginBottom="5dp"
                android:layout_weight="33"
                android:background="@drawable/red_btn"

                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@null"

                app:iconGravity="textStart">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
    </RelativeLayout>



</ScrollView>