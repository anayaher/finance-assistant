
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        android:id="@+id/dpJkCard"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="100"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:padding="6dp"
                android:background="#1685DD"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:textSize="18sp"
                    android:id="@+id/jkDispSr"
                    android:background="@drawable/round_blue_bck"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="234">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:id="@+id/jkDispDate"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="11/3/23">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:weightSum="100"

                android:orientation="horizontal"
                android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="0dp"
                   android:orientation="vertical"
                   android:paddingTop="12dp"
                   android:layout_height="match_parent"
                   android:layout_weight="60">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:textStyle="bold"
                       android:id="@+id/jkDispPayee"
                       android:textSize="18sp"
                       android:text="Anay Aher"
                       android:paddingStart="12dp">

                   </TextView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:textColor="#898686"
                       android:id="@+id/jkDispHead"
                       android:textSize="14sp"
                       android:text="College Fees"
                       android:paddingStart="12dp">

                   </TextView>
               </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="+13000"
                    android:textStyle="bold"
                    android:id="@+id/jkDispAmt"

                    android:textSize="20sp"
                    android:textColor="#008F06"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="match_parent"

                    android:layout_weight="40">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

