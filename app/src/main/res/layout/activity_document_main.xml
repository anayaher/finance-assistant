<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".document.DocumentMain">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"

        android:layout_marginTop="30dp"
        android:layout_marginStart="25sp"
        app:boxBackgroundColor="#F4F2F2"
        android:layout_marginEnd="25sp"
        android:id="@+id/DocumentFirstTIl"



        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        app:boxCollapsedPaddingTop="0dp"


        android:outlineAmbientShadowColor="@color/black"
        app:boxCornerRadiusBottomStart="15sp"
        app:boxCornerRadiusBottomEnd="15sp"
        app:boxCornerRadiusTopStart="15sp"
        app:boxCornerRadiusTopEnd="15sp"
        android:hint="Enter Document Title"
        android:padding="0dp"




        android:layout_height="wrap_content"
       >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DocumentNameTv"


            android:textColor="#000000">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.ortiz.touchview.TouchImageView
        android:id="@+id/DocumentImageVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDocumentBtn"


        android:layout_marginTop="38dp"
        android:layout_marginEnd="5sp"
        android:src="@drawable/bsas">

    </com.ortiz.touchview.TouchImageView>

    <com.google.android.material.button.MaterialButton

        android:id="@+id/addDocumentBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/DocumentFirstTIl"
        android:layout_marginStart="25sp"


        android:layout_marginTop="16dp"

        android:layout_marginEnd="25sp"
        android:layout_marginBottom="5dp"
        android:layout_weight="33"

        android:background="@drawable/btn2_exm"
        android:text="Add Image "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@null"

        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="textStart">


    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton

        android:id="@+id/DocumentSavemain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/DocumentImageVw"
        android:layout_marginStart="25sp"


        android:layout_marginTop="100dp"

        android:layout_marginEnd="25sp"
        android:layout_marginBottom="5dp"
        android:layout_weight="33"

        android:background="@drawable/btn2_exm"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@null"


        app:iconGravity="textStart">


    </com.google.android.material.button.MaterialButton>

</RelativeLayout>
